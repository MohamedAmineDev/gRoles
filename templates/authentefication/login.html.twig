{% extends 'base.html.twig' %}

{% block title %}Login {% endblock %}

{% block body %}

<div class="container">
    <h1>Login</h1>
    <form action="{{path('app_login')}}" method="post">
        <div class="form-group">  
            <input type="email" name="_username" id="username" class="form-control">
        </div>
        <div class="form-group">
            <input type="password" name="_password" id="password" class="form-control">  
        </div>
        <div class="form-group">
            <input type="submit" value="login" class="btn-primary btn">
        <input type="reset" value="reset" class="btn-danger btn">  
        </div>
        
        
        
    </form>
</div>
{% endblock %}
